# This is code from https://github.com/petrockblog/RetroPie-Setup/wiki/Setting-up-the-XBox360-controller
# copied into a wget-able file.

# How many Controllers? (support up to 4 Controllers)
CONTROLLER_NUM=1

# Arguments
#ARGUMENTS="--trigger-as-button --dpad-as-button"
ARGUMENTS="--config /home/pi/.xboxdrv/mapping"

case $CONTROLLER_NUM in
    1) CONTROLLER="-w 0 -l 2 $ARGUMENTS"
    ;;
    2) CONTROLLER="-w 0 -l 2 $ARGUMENTS --next-controller -w 1 -l 3 $ARGUMENTS"
    ;;
    3) CONTROLLER="-w 0 -l 2 $ARGUMENTS --next-controller -w 1 -l 3 $ARGUMENTS --next-controller -w 2 -l 4 $ARGUMENTS"
    ;;
    4) CONTROLLER="-w 0 -l 2 $ARGUMENTS --next-controller -w 1 -l 3 $ARGUMENTS --next-controller -w 2 -l 4 $ARGUMENTS --next-controller -w 3 -l 5 $ARGUMENTS"
    ;;
    *) CONTROLLER="incorrect amount of controller specified"
    ;;
esac
